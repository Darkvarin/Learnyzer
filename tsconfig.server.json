{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "outDir": "./dist",
    "rootDir": "./server",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "noEmit": false
  },
  "include": [
    "server/**/*",
    "shared/**/*",
    "db/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "client"
  ]
}